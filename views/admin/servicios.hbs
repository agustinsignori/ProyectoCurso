<div class="container" style="margin-top: 150px;">
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{usuario}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesion <i class="fas 
                    fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-7" style="margin-end: -9px;">
            <h2>Listados de los Servicios</h2>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/servicios/agregar" class="btn btn-success"><i class="fa fa-plus"></i>Nuevo</a>
        </div>
        <div class="col-3 text-end">
            <form class="form-inline" action="/admin/servicios" method="get">
                <input class="form-control" type="search" placeholder="Buscar" 
                aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}} >
                <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fa fa-search"
                        aria-hidden="true"></i>
                </button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each servicios}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-center">
                            <a href="/admin/servicios/modificar/{{id}}" class="btn btn-sm btn-secondary">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="/admin/servicios/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
                {{#unless servicios.length}}
                No se encontraron resultados para "<b>{{q}}</b>"
                {{/unless}}
            {{/if}}
        </div>
    </div>

</div>